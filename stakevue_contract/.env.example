# Odra Livenet Environment Configuration
# Copy this file to .env and fill in your values

# Your Casper secret key path (PEM file)
# Option 1: Path to secret key file
ODRA_CASPER_LIVENET_SECRET_KEY_PATH=/path/to/your/secret_key.pem

# Option 2: Or inline secret key (base64 encoded)
# ODRA_CASPER_LIVENET_SECRET_KEY=your_base64_encoded_key

# Casper RPC endpoint
ODRA_CASPER_LIVENET_NODE_ADDRESS=https://rpc.testnet.casperlabs.io/rpc

# Chain name
ODRA_CASPER_LIVENET_CHAIN_NAME=casper-test

# Event listening endpoint (optional)
ODRA_CASPER_LIVENET_EVENT_ADDRESS=http://65.21.227.180:9999/events/main
